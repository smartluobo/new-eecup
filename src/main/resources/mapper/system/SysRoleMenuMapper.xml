<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ibay.tea.dao.system.SysRoleMenuMapper">

    <resultMap id="BaseResultMap" type="com.ibay.tea.entity.system.SysRoleMenu" >
        <result column="role_id" property="roleId"/>
        <result column="menu_id" property="menuId"/>
    </resultMap>

    <sql id="BASE_TABLE">
        sys_new_role_menu
    </sql>

    <sql id="BASE_COLUMN">
        role_id, menu_id
    </sql>

    <!--保存角色与角色的关联关系 -->
    <insert id="save" parameterType="com.ibay.tea.entity.system.SysRoleMenu" >
        INSERT INTO
        <include refid="BASE_TABLE"/>
        (
        role_id,
        menu_id
        )
        VALUES
        (
        #{roleId},
        #{menuId}
        )
    </insert>

    <!-- 删除角色与菜单的关联关系 -->
    <select id="deleteSysRoleMenu" resultMap="BaseResultMap">
       DELETE FROM sys_new_role_menu WHERE role_id = #{roleId}
    </select>
    <!-- 查询角色与菜单的关联关系 -->
    <select id="getSysRoleMenuList" resultType="java.lang.Integer">
       select DISTINCT menu_id FROM sys_new_role_menu WHERE role_id = #{roleId}
    </select>

    <!-- 查询角色与菜单的关联关系 -->
    <select id="getSysRoleMenu" resultMap="BaseResultMap">
       select * FROM sys_new_role_menu WHERE role_id = #{roleId}
    </select>


    <!--批量角色与菜单的关联关系-->
    <insert id="batchSaveSysRoleMenu" keyColumn="id" keyProperty="id"
            parameterType="java.util.List" useGeneratedKeys="true">
        INSERT INTO
        sys_new_role_menu
        (
        role_id,
        menu_id
        )
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.roleId},
            #{item.menuId}
            )
        </foreach>
    </insert>
    <!--批量角色与菜单的关联关系-->
    <insert id="batchSaveSysRoleMenuOld" keyColumn="id" keyProperty="id"
            parameterType="java.util.List" useGeneratedKeys="true">
        INSERT INTO
        sys_role_menu
        (
        role_id,
        menu_id
        )
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.roleId},
            #{item.menuId}
            )
        </foreach>
    </insert>

</mapper>
